<idea-plugin>
  <id>CleverTap.CleverTap</id>
  <name>CleverTap Assistant (Beta)</name>
  <vendor email="jideshnair8@gmail.com">Clevertap</vendor>
  <description>Plugin helps to integrate Clevertap in your app in less then 5 minutes.
        It helps to install the CleverTap SDK, track your  user events,enrich user profiles,
        send push notifications and see this information within the CleverTap dashboard .
        </description>
  <idea-version since-build="182.0"/>
  <depends>com.intellij.modules.lang</depends>
  <depends>org.jetbrains.kotlin</depends>
  <version>0.3</version>
  <extensions defaultExtensionNs="com.intellij"/>
  <actions>
    <group id="inner" text="Clevertap Assistant" popup="true" icon="/icons/ctlogo2.png">
      <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewDir"/>
      <action id="CleanPlugin.ID1" class="action.SearchAction" text="Basic Integration" description="Configure Clevertap." use-shortcut-of="CleanPlugin.ID1" keymap="$default"/>
      <action id="CleanPlugin.ID2" class="action.SearchAction_FCM" text="Push Notification" description="Configure Clevertap." use-shortcut-of="CleanPlugin.ID2" keymap="$default"/>
      <action id="CleanPlugin.ID7" class="action.PushAmp" text="Custom Push Amplification" description="Configure CleverTap." keymap="$default"/>
&gt;

                  <action id="CleanPlugin.ID4" class="action.XiomiPush" text="Xiaomi Push" description="Configure Clevertap." keymap="$default"/>
      <action id="CleanPlugin.ID5" class="action.HuaweiPush" text="Huawei Push" description="Configure Clevertap." keymap="$default"/>
      <action id="CleanPlugin.ID6" class="action.Geofence" text="Geofence" description="Configure Clevertap." keymap="$default"/>
      <action id="CleanPlugin.ID3" class="action.Auditreport" text="Audit Report" description="Configure Clevertap." use-shortcut-of="CleanPlugin.ID3" keymap="$default"/>
    </group>
    <action class="action.Auditreport" id="action.Auditreport" text="Audit Report" description="Generating Audit Report">
      <add-to-group group-id="GenerateGroup" anchor="first"/>
    </action>
    <action class="action.UserEvents" id="action.AccessorAction" text="Clevertap Events" description="Add Clevertap Events/User Properties">
      <add-to-group group-id="GenerateGroup" anchor="first"/>
    </action>
    <action class="action.PushProfile" id="action.AccessorAction_Userproperties" text="Clevertap PushProfile" description="Add Clevertap User Properties">
      <add-to-group group-id="GenerateGroup" anchor="first"/>
    </action>
    <action class="action.OnUserLogin" id="action.AccessorAction_Onuserlogin" text="Clevertap OnuserLogin" description="Add Clevertap Onuserlogin">
      <add-to-group group-id="GenerateGroup" anchor="first"/>
    </action>
    <group id="events" text="Add ClevertTap Events" popup="true" icon="/icons/ctlogo3.png">
      <add-to-group group-id="EditorPopupMenu" anchor="first"/>
      <action class="action.UserEvents_cursor" id="event" text="Only Event" description="Demo"/>
      <action class="action.UserEventsWithProperties_cursor" id="eventproperties" text="Events with properties" description="Demo"/>
    </group>
    <group id="userproperties" text="Add ClevertTap User Properties" popup="true" icon="/icons/ctlogo3.png">
      <add-to-group group-id="EditorPopupMenu" anchor="first"/>
      <action class="action.OnUserLogin_cursor" id="onuserlogin" text="OnUserLogin " description="Demo"/>
      <action class="action.PushProfile_cursor" id="profilepush" text="Profile Push" description="Demo"/>
    </group>
    <action class="action.IntializeCleverTap_cursor" id="intialize" text="Initialize CleverTap " description="Intialize clevertap object" icon="/icons/ctlogo3.png">
      <add-to-group group-id="EditorPopupMenu" anchor="first"/>
    </action>
    <action class="action.SearchAction_FCM" id="action.SearchAction_FCM" text="Add Push Notification with Clevertap" description="Add FCM and Clevertap">
      <add-to-group group-id="GenerateGroup" anchor="first"/>
    </action>
    <action class="action.Demo" id="action.Search" text="Push Demo" description="Add FCM and Clevertap">
      <add-to-group group-id="GenerateGroup" anchor="first"/>
    </action>
  </actions>
</idea-plugin>
